/* pages/my/my.wxss */
.wrapper {
  width: 100%;
  height: 100%;
  background-color: white;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.top {
  width: 100%;
  background-color: #446977;
  padding-top: 100rpx;
}

.top view {
  font-size: 40rpx;
  color: white;
  text-align: center;
  line-height: 100rpx;
}

.top .name {
  font-size: 32rpx;
  color: white;
  margin-top: 100rpx;
  text-align: center;
}

.menu {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 20rpx 0rpx;
  border-bottom: 2rpx solid #ccc;
}

.menu image {
  width: 100rpx;
  height: 100rpx;
}

.menu text {
  font-size: 28rpx;
}
